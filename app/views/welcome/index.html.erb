<!DOCTYPE>
<!--This is the landing page with the circluar view-->
<html>
    <head>
        <title>HR @ TheGlobe Inc.</title>
        <link rel="stylesheet" href="assets/style.css" type="text/css" media="screen"/>
    </head>
    <body>
       <div id="content">
            <!--<a class="back" href="http://tympanus.net/codrops/2010/04/29/awesome-bubble-navigation-with-jquery"></a>-->
            <div class="title"></div>
            <p class="notice"><%= flash[:notice] %></p>
            <div class="navigation" id="nav">
                <div class="item home">
                    <img src="assets/bg_user.png" alt="" width="199" height="199" class="circle"/>
                    <a href="#" class="icon"></a>
                    <h2>User</h2>
                    <ul>
                        <%= render 'devise/menu/registration_items' %>
                        <%= render 'devise/menu/login_items' %>
                    </ul>
                </div>
                <div class="item shop">
                    <img src="assets/bg_home.png" alt="" width="199" height="199" class="circle"/>
                    <a href="#" class="icon"></a>
                    <h2>Profiles</h2>
                    <ul>
                        <li><a href="/profiles">All</a></li>
                        <li><%= link_to 'New', new_profile_path %></li>
                    </ul>
                </div>
                <div class="item camera">
                    <img src="assets/bg_camera.png" alt="" width="199" height="199" class="circle"/>
                    <a href="#" class="icon"></a>
                    <h2>Analytics</h2>
                    <ul>
                        <li><a href="/analytics/show">Employee</a></li>
                        <li><a href="/analytics/holidays">Holiday</a></li>
                    </ul>
                    </ul>
                </div>
        <!-- The JavaScript -->
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
        <script type="text/javascript" src="/assets/jquery.easing.1.3.js"></script>
        <script type="text/javascript">
            $(function() {
                $('#nav > div').hover(
                function () {
                    var $this = $(this);
                    $this.find('img').stop().animate({
                        'width'     :'199px',
                        'height'    :'199px',
                        'top'       :'-25px',
                        'left'      :'-25px',
                        'opacity'   :'1.0'
                    },500,'easeOutBack',function(){
                        $(this).parent().find('ul').fadeIn(700);
                    });

                    $this.find('a:first,h2').addClass('active');
                },
                function () {
                    var $this = $(this);
                    $this.find('ul').fadeOut(500);
                    $this.find('img').stop().animate({
                        'width'     :'52px',
                        'height'    :'52px',
                        'top'       :'0px',
                        'left'      :'0px',
                        'opacity'   :'0.1'
                    },5000,'easeOutBack');

                    $this.find('a:first,h2').removeClass('active');
                }
            );
            });
        </script>
    </body>
    <footer>
       &copy; The Globe Inc.&trade; 2015
    </footer>
</html>